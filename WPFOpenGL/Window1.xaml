<Window x:Class="WPFOpenGL.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFOpenGL"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        mc:Ignorable="d"
        Title="Parameters" Height="165" Width="200">
    <Grid>
        <StackPanel Grid.Column="1" Background="LightGray">

            <Button Content="Red" 
                    Margin="4,5,4,5"
                    Click="Red_OnClick">
                <Button.Background>Red</Button.Background>
            </Button>
            <Button Content="Green" 
                    Margin="4,5,4,5"
                    Click="Green_OnClick">
                <Button.Background>Green</Button.Background>
            </Button>
            <Button Content="Blue" 
                    Margin="4,5,4,5"
                    Click="Blue_OnClick">
                <Button.Background>Blue</Button.Background>
            </Button>
            <Button Content="Yellow" 
                    Margin="4,5,4,5"
                    Click="Yellow_OnClick">
                <Button.Background>Yellow</Button.Background>
            </Button>

        </StackPanel>
    </Grid>
</Window>
